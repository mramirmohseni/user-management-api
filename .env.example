# ============================================
# Django Settings
# ============================================
# Generate a new secret key using:
# python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key-here-minimum-50-characters

# Set to False in production
DEBUG=True

# Comma-separated list of allowed hosts
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# ============================================
# PostgreSQL Configuration (for Docker Compose)
# ============================================
# Database name
POSTGRES_DB=user_management_db

# Database user
POSTGRES_USER=postgres

# Database password (use a strong password)
POSTGRES_PASSWORD=your_secure_password_here

# ============================================
# Database Configuration (for Django common.py)
# ============================================
# Database name (should match POSTGRES_DB)
DB_NAME=user_management_db

# Database user (should match POSTGRES_USER)
DB_USER=postgres

# Database password (should match POSTGRES_PASSWORD)
DB_PASSWORD=your_secure_password_here

# Database host (use 'db' for Docker, 'localhost' for local development)
DB_HOST=db

# Database port
DB_PORT=5432

# ============================================
# JWT Settings (Optional - for djangorestframework-simplejwt)
# ============================================
# Access token lifetime in minutes (default: 5)
JWT_ACCESS_TOKEN_LIFETIME_MINUTES=5

# Refresh token lifetime in days (default: 1)
JWT_REFRESH_TOKEN_LIFETIME_DAYS=1

# ============================================
# CORS Settings (Optional - for django-cors-headers)
# ============================================
# Comma-separated list of allowed origins
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000